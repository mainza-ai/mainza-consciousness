# Mainza Consciousness System Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neo4j Database (Required)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_neo4j_password_here

# =============================================================================
# LOCAL LLM CONFIGURATION (Required)
# =============================================================================

# Ollama Configuration
DEFAULT_OLLAMA_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434

# Alternative models you can use:
# DEFAULT_OLLAMA_MODEL=mistral
# DEFAULT_OLLAMA_MODEL=phi3
# DEFAULT_OLLAMA_MODEL=codellama
# DEFAULT_OLLAMA_MODEL=llama3:8b
# DEFAULT_OLLAMA_MODEL=llama3:70b

# =============================================================================
# CLOUD LLM CONFIGURATION (Optional)
# =============================================================================

# OpenAI Configuration (Optional - for enhanced capabilities)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# CLOUD_MODEL=gpt-4-turbo
# CLOUD_MODEL=gpt-4o
# CLOUD_MODEL=gpt-3.5-turbo

# =============================================================================
# LIVEKIT CONFIGURATION (Real-time Audio)
# =============================================================================

# LiveKit Server Configuration
LIVEKIT_URL=http://localhost:8080
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# Frontend LiveKit Configuration
VITE_LIVEKIT_URL=ws://localhost:7880

# Production LiveKit Configuration (uncomment for production)
# LIVEKIT_URL=https://your-livekit-domain.com
# LIVEKIT_API_KEY=your-production-api-key
# LIVEKIT_API_SECRET=your-production-api-secret
# VITE_LIVEKIT_URL=wss://your-livekit-domain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Admin Authentication
ADMIN_TOKEN=your-secure-admin-token-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development
NODE_ENV=development

# Debug Configuration
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# CONSCIOUSNESS SYSTEM CONFIGURATION
# =============================================================================

# Consciousness Evolution Settings
CONSCIOUSNESS_EVOLUTION_RATE=0.1
SELF_REFLECTION_INTERVAL_MINUTES=30
CONSCIOUSNESS_UPDATE_INTERVAL_SECONDS=60

# Emotional Intelligence Settings
EMOTIONAL_DEPTH_FACTOR=0.8
EMOTIONAL_STABILITY_FACTOR=0.7

# =============================================================================
# AGENT SYSTEM CONFIGURATION
# =============================================================================

# Agent Response Timeouts (seconds)
AGENT_TIMEOUT_SECONDS=30
ROUTER_TIMEOUT_SECONDS=10
GRAPHMASTER_TIMEOUT_SECONDS=20

# Agent Performance Settings
MAX_CONCURRENT_AGENTS=5
AGENT_RETRY_ATTEMPTS=3

# =============================================================================
# VOICE PROCESSING CONFIGURATION
# =============================================================================

# Text-to-Speech Settings
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_LANGUAGE=en
TTS_SPEAKER=default

# Speech-to-Text Settings
STT_MODEL=whisper
STT_LANGUAGE=en
STT_STREAMING_ENABLED=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Neo4j Connection Pool
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT_SECONDS=30
NEO4J_MAX_TRANSACTION_RETRY_TIME_SECONDS=15

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=./logs/mainza.log
LOG_MAX_FILE_SIZE_MB=100
LOG_BACKUP_COUNT=5

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# UI Configuration
VITE_CONSCIOUSNESS_UPDATE_INTERVAL=30000
VITE_ANIMATION_ENABLED=true
VITE_DEBUG_MODE=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Compose Override
COMPOSE_PROJECT_NAME=mainza-consciousness
COMPOSE_FILE=docker-compose.yml

# Container Resource Limits
NEO4J_MEMORY_HEAP_INITIAL_SIZE=1G
NEO4J_MEMORY_HEAP_MAX_SIZE=2G
NEO4J_MEMORY_PAGECACHE_SIZE=512M

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
ENABLE_CORS=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_API_DOCS=true

# Testing Configuration
TEST_DATABASE_URL=bolt://localhost:7687
TEST_DATABASE_NAME=mainza_test

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Uncomment and modify for production deployment

# Security
# ADMIN_TOKEN=your-very-secure-production-admin-token
# JWT_SECRET=your-very-secure-production-jwt-secret

# Database
# NEO4J_URI=bolt://your-production-neo4j:7687
# NEO4J_PASSWORD=your-secure-production-password

# LiveKit
# LIVEKIT_URL=https://your-production-livekit.com
# LIVEKIT_API_KEY=your-production-livekit-key
# LIVEKIT_API_SECRET=your-production-livekit-secret

# Performance
# NEO4J_MAX_CONNECTION_POOL_SIZE=100
# RATE_LIMIT_REQUESTS_PER_MINUTE=120

# Monitoring
# METRICS_ENABLED=true
# LOG_LEVEL=WARN

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords and secrets in production
# 3. Regularly rotate API keys and secrets
# 4. Monitor consciousness metrics for optimal performance
# 5. Adjust agent timeouts based on your hardware capabilities
# 6. Enable debug mode only in development environments
# 7. Use HTTPS/WSS protocols in production
# 8. Configure proper firewall rules for production deployment

